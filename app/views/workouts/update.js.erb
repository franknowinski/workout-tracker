function completeWorkout(workoutId) {
  $('tr[data-workout-id= ' + workoutId + ']').toggleClass('completed');
  $('.' + workoutId + '-edit').addClass('hide-row');
  $('.' + workoutId + '-delete').addClass('hide-row');
}

function undoCompletion(workoutId){
  $('tr[data-workout-id= ' + workoutId + ']').removeClass('completed');
  $('.' + workoutId + '-edit').removeClass('hide-row');
  $('.' + workoutId + '-delete').removeClass('hide-row');
}

$(function(){
  var workoutId = <%= @workout.id %>;

  // Adds the completed class to the workout if it's completed
  <%= @completed == '1' %> ? completeWorkout(workoutId) : undoCompletion(workoutId);

  // Assign updated workout values to variables
  var workoutName = $('input.' + workoutId +'-name').val();
  var workoutSets = $('input.' + workoutId +'-sets').val();
  var workoutReps = $('input.' + workoutId +'-reps').val();

  // Display new workout values in DOM
  $('span[data-workout-name="' + workoutId + '"]').text(workoutName);
  $('span[data-workout-name="' + workoutId + '"]').removeClass('hide-row');

  $('span[data-workout-sets="' + workoutId + '"]').text(workoutSets);
  $('span[data-workout-sets="' + workoutId + '"]').removeClass('hide-row');

  $('span[data-workout-reps="' + workoutId + '"]').text(workoutReps);
  $('span[data-workout-reps="' + workoutId + '"]').removeClass('hide-row');

  // // Remove input fields from DOM
  $('input.' + workoutId +'-name').removeAttr('id');
  $('input.' + workoutId +'-sets').removeAttr('id');
  $('input.' + workoutId +'-reps').removeAttr('id');
  $('#edit-form-instruction').addClass('hide-row');
});
